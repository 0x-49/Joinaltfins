---
const features = [
  {
    title: "Crypto Screener",
    description: "Find the best trading opportunities with our advanced crypto screener.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-10 h-10 text-blue-500 mb-4">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.3-4.3"></path>
    </svg>`,
  },
  {
    title: "AI-Generated Chart Patterns",
    description: "Leverage AI to identify potential trading patterns and signals.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-10 h-10 text-blue-500 mb-4">
      <polyline points="22 7 13.5 15.5 8.5 10.5 2 17"></polyline>
      <polyline points="16 7 22 7 22 13"></polyline>
    </svg>`,
  },
  {
    title: "Real-Time Trading Signals",
    description: "Get actionable insights with our real-time trading signals.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-10 h-10 text-blue-500 mb-4">
      <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
    </svg>`,
  },
  {
    title: "Educational Resources",
    description: "Learn and improve your trading skills with our comprehensive resources.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-10 h-10 text-blue-500 mb-4">
      <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
      <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
    </svg>`,
  },
];
---

<section class="py-20 px-4 sm:px-6 lg:px-8">
  <h2 class="text-3xl sm:text-4xl font-bold text-center mb-12">Powerful Features for Smart Trading</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
    {features.map((feature) => (
      <div class="bg-gray-800 border-gray-700 rounded-lg overflow-hidden">
        <div class="p-6">
          <Fragment set:html={feature.icon} />
          <h3 class="text-lg font-semibold mb-2">{feature.title}</h3>
          <p class="text-gray-400">{feature.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
