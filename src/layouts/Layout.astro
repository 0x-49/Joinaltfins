---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'altFINS - AI-Powered Crypto Trading Platform' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/altFins.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="altFINS is an AI-powered crypto trading platform that helps you make data-driven trading decisions with advanced technical analysis, pattern recognition, and real-time signals." />
  </head>
  <body class="bg-gray-900 text-white min-h-screen">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
  
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }
</style>
